{
  "name": "Real-Estate",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/xssec": "^4.6.0",
    "express": "^4",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.9.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-realestate-ui": "cds watch --open realestate-ui/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy RealEstate --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-dboperations": "cds watch --open dboperations/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "sql": {
      "native_hana_associations": false
    },
    "requires": {
      "auth": "mocked",
      "destinations": true,
      "html5-runtime": true,
      "workzone": true,
      "db": {
        "kind": "hana",
        "vcap": {
          "label": "hana",
          "plan": "hdi-shared",
          "name": "hdi-shared-realestate"
        }
      },
      "API_RECONTRACT_0001": {
        "kind": "odata",
        "model": "srv/external/API_RECONTRACT_0001"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "workspaces": [
    "app/*"
  ]
}