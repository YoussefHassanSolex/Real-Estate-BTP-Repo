<mvc:View
    controllerName="dboperations.controller.Measurements"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
>
    <Page id="_IDGenPage2" title="Measurements">
        <headerContent>
            <Button id="_IDGenButton38" icon="sap-icon://add" text="Add Measurement" press="onAddMeasurement"/>
        </headerContent>

        <content>
            <Table id="measurementsTable" items="{measurements>/}" width="100%">
                <columns>
                    <Column id="_IDGenColumn77"><Text id="_IDGenText213" text="Code"/></Column>
                    <Column id="_IDGenColumn129"><Text id="_IDGenText214" text="Description"/></Column>
                    <Column id="_IDGenColumn130"><Text id="_IDGenText215" text="Actions"/></Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem12">
                        <cells>
                            <Text id="_IDGenText216" text="{measurements>code}"/>
                            <Text id="_IDGenText217" text="{measurements>description}"/>
                            <HBox id="_IDGenHBox7">
                                <Button id="_IDGenButton39" icon="sap-icon://edit" press="onEditMeasurement"/>
                                <Button id="_IDGenButton40" icon="sap-icon://delete" type="Reject" press="onDeleteMeasurement"/>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>

        <Dialog id="measurementDialog" title="Add/Edit Measurement" stretchOnPhone="true">
            <VBox id="_IDGenVBox4" class="sapUiSmallMargin">
                <Label id="_IDGenLabel47" text="Code"/>
                <Input id="_IDGenInput36" value="{local>/code}" editable="{= !${local>/isEdit}}" placeholder="Enter Code"/>
                <Label id="_IDGenLabel52" text="Description"/>
                <Input id="_IDGenInput37" value="{local>/description}" placeholder="Enter Description"/>
            </VBox>

            <beginButton>
                <Button id="_IDGenButton41" text="Save" press="onSaveMeasurement"/>
            </beginButton>
            <endButton>
                <Button id="_IDGenButton42" text="Cancel" press="onCancelMeasurement"/>
            </endButton>
        </Dialog>
    </Page>
</mvc:View>
