<mvc:View
    controllerName="dboperations.controller.Conditions"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
>
    <Page id="_IDGenPage5" title="Conditions">
        <headerContent>
            <Button id="_IDGenButton46" icon="sap-icon://add" text="Add Condition" press="onAddCondition"/>
        </headerContent>

        <content>
            <Table id="conditionsTable" items="{conditions>/}" width="100%">
                <columns>
                    <Column id="_IDGenColumn135"><Text id="_IDGenText225" text="Code"/></Column>
                    <Column id="_IDGenColumn136"><Text id="_IDGenText226" text="Description"/></Column>
                    <Column id="_IDGenColumn137"><Text id="_IDGenText227" text="Actions"/></Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem14">
                        <cells>
                            <Text id="_IDGenText228" text="{conditions>code}"/>
                            <Text id="_IDGenText229" text="{conditions>description}"/>
                            <HBox id="_IDGenHBox9">
                                <Button id="_IDGenButton47" icon="sap-icon://edit" press="onEditCondition"/>
                                <Button id="_IDGenButton48" icon="sap-icon://delete" type="Reject" press="onDeleteCondition"/>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>

        <Dialog id="conditionDialog" title="Add/Edit Condition">
            <VBox id="_IDGenVBox5" class="sapUiSmallMargin">
                <Label id="_IDGenLabel54" text="Code"/>
                <Input id="_IDGenInput38" value="{local>/code}" editable="{= !${local>/isEdit}}" placeholder="Enter Code"/>
                <Label id="_IDGenLabel55" text="Description"/>
                <Input id="_IDGenInput41" value="{local>/description}" placeholder="Enter Description"/>
            </VBox>

            <beginButton>
                <Button id="_IDGenButton49" text="Save" press="onSaveCondition"/>
            </beginButton>
            <endButton>
                <Button id="_IDGenButton50" text="Cancel" press="onCancelCondition"/>
            </endButton>
        </Dialog>
    </Page>
</mvc:View>
