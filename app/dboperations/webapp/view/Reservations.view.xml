<mvc:View
    controllerName="dboperations.controller.Reservations"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">

    <Page id="_IDGenPage1" title="Reservations">
        <headerContent>
            <!-- <Button
                id="btnAddReservation"
                icon="sap-icon://add"
                tooltip="Add"
                text="New Reservation"
                press="onAddReservation"
            /> -->
        </headerContent>

        <content>
            <ScrollContainer id="_IDGenScrollContainer5"
                horizontal="true"
                vertical="false"
                width="100%"
                height="100%"
                focusable="true"
                class="noPaddingScroll">

                <Table
                    id="reservationsTable"
                    items="{reservations>/}"
                    mode="SingleSelectMaster"
                    width="120%"
                    inset="false"
                    class="noPaddingTable">

                    <columns>
                        <Column id="_IDGenColumn69"><Text id="_IDGenText120" text="Reservation ID"/></Column>
                        <Column id="_IDGenColumn70"><Text id="_IDGenText121" text="Company Code"/></Column>
                        <Column id="_IDGenColumn71"><Text id="_IDGenText122" text="Old Reservation ID"/></Column>
                        <Column id="_IDGenColumn72"><Text id="_IDGenText123" text="EOI ID"/></Column>
                        <Column id="_IDGenColumn73"><Text id="_IDGenText124" text="Description"/></Column>
                        <Column id="_IDGenColumn74"><Text id="_IDGenText125" text="Sales Type"/></Column>
                        <Column id="_IDGenColumn75"><Text id="_IDGenText126" text="Valid From"/></Column>
                        <Column id="_IDGenColumn76"><Text id="_IDGenText127" text="Customer Type"/></Column>
                        <Column id="_IDGenColumn77"><Text id="_IDGenText128" text="Currency"/></Column>
                        <Column id="_IDGenColumn78"><Text id="_IDGenText129" text="After Sales"/></Column>
                        <Column id="_IDGenColumn79"><Text id="_IDGenText130" text="Status"/></Column>
                        <Column id="_IDGenColumn80"><Text id="_IDGenText131" text="Actions"/></Column>
                    </columns>

                    <items>
                        <ColumnListItem id="_IDGenColumnListItem7">
                            <cells>
                                <Text id="_IDGenText132" text="{reservations>reservationId}"/>
                                <Text id="_IDGenText133" text="{reservations>companyCodeId}"/>
                                <Text id="_IDGenText134" text="{reservations>oldReservationId}"/>
                                <Text id="_IDGenText135" text="{reservations>eoiId}"/>
                                <Text id="_IDGenText136" text="{reservations>description}"/>
                                <Text id="_IDGenText137" text="{reservations>salesType}"/>
                                <Text id="_IDGenText138" text="{reservations>validFrom}"/>
                                <Text id="_IDGenText139" text="{reservations>customerType}"/>
                                <Text id="_IDGenText140" text="{reservations>currency}"/>
                                <Text id="_IDGenText141" text="{reservations>afterSales}"/>
                                <Text id="_IDGenText142" text="{reservations>status}"/>
                                <HBox id="_IDGenHBox5">
                                    <Button id="_IDGenButton17" icon="sap-icon://information" tooltip="Details" press="onShowReservationDetails"/>
                                    <Button id="_IDGenButton20" icon="sap-icon://edit" tooltip="Edit" press="onEditReservation"/>
                                    <Button id="_IDGenButton25" icon="sap-icon://delete" type="Reject" tooltip="Delete" press="onDeleteReservation"/>
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </content>
    </Page>
>

</mvc:View>
